{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}


<div class="container appoinment">
                    <form class="appoinment-box">
                <div class="heading">
                    <h4>S'inscrire </h4>
                </div>
                                  <div class="form-group">
                                    <label>nom</label>
                                        <input class="form-control" id="l-lname" name="l-lname" placeholder="nom" type="nom">
                                    
                                    </div>
                                    <div class="form-group">
                                    <label>prenom </label>
                                        <input class="form-control" id="l-lname" name="l-lname" placeholder="prenom" type="prenom">
                                    </div>
                                    <div class="form-group">
                                    <label>Telephone</label>
                                        <input class="form-control" id="l-lname" name="l-lname" placeholder="telephone" type="telephone">
                                    </div>
                                    <div class="form-group">
                                    <label>Email </label>
                                        <input class="form-control" id="l-lname" name="l-lname" placeholder="email" type="email">
                                    </div>
                                    <div class="form-group">
                                    <label>Spécialité </label>
                                        {{ render(controller('App\\Controller\\DoctorController::getDoctorsSpecialities')) }}
                                    </div>   
                                    
                                    <label>Sexe </label>
                                    
                                    <select name="sexe">
                                    <option>Homme</option>
                                    <option>Femme</option>
                                    </select>
                                    
                                    <div>
                                    <label>Choisir une Abonnement</label>
                                    {{ render(controller('App\\Controller\\DoctorController::getDoctorsSubscriptions')) }}
                                    </div>
                                    
                                    <div class="row">
                                    <div class="col-md-6">
                                            <button type="submit" name="register" id="register">
                                            S'inscrire <i class="fa fa-paper-plane"></i>
                                            </button>
                                        </div>
                                        </div>
                                </form>
                                </div>
{% endblock %}